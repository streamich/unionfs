{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "outDir": "lib",
    "module": "commonjs",
    "removeComments": false,
    "noImplicitAny": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "downlevelIteration": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["src/__tests__", "node_modules", "demo", "lib"]
}
